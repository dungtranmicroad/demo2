{{#unless context.site.mobileView}}
  {{#if context.showThumbnail}}
    {{raw "list/topic-thumbnail" topic=context.topic
                                 thumbnails=context.thumbnails}}
  {{/if}}
  {{#if context.socialMediaStyle}}
    {{raw "list/topic-intro" topic=context.topic
                             posterNames=context.posterNames
                             likesHeat=context.view.likesHeat
                             title=context.view.title}}
  {{else}}
    {{#if context.showCategoryBadge}}
      {{raw "list/topic-category" category=context.topic.category}}
    {{/if}}
  {{/if}}
  {{#if context.showActions}}
    {{raw "list/topic-actions" likeCountDisplay=context.likeCountDisplay
                               topicActions=context.topicActions}}
  {{/if}}
{{/unless}}
